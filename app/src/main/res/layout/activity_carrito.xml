<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CarritoActivity"
    android:background="@drawable/fondo">


    <ImageView
        android:id="@+id/chuleta"
        android:layout_width="158dp"
        android:layout_height="184dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/chuleta" />

    <TextView
        android:id="@+id/cantidadchuleta"
        android:layout_width="170dp"
        android:layout_height="34dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/boton_redondo2"
        android:text="Cantidad: 3 Libras"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/chuleta"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/valorchuleta"
        android:layout_width="170dp"
        android:layout_height="34dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/boton_redondo2"
        android:text="Valor: 30.000"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/chuleta"
        app:layout_constraintTop_toBottomOf="@+id/cantidadchuleta" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="158dp"
        android:layout_height="184dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chuleta"
        app:srcCompat="@drawable/limon" />

    <TextView
        android:id="@+id/cantidadlimon"
        android:layout_width="170dp"
        android:layout_height="34dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/boton_redondo2"
        android:text="Cantidad: 1"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageView7"
        app:layout_constraintTop_toBottomOf="@+id/valorchuleta" />

    <TextView
        android:id="@+id/valorlimon"
        android:layout_width="170dp"
        android:layout_height="34dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/boton_redondo2"
        android:text="Valor: 3.000"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageView7"
        app:layout_constraintTop_toBottomOf="@+id/cantidadlimon" />

    <TextView
        android:id="@+id/total"
        android:layout_width="170dp"
        android:layout_height="34dp"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/boton_redondo2"
        android:text="Total: 33.000"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/domicilio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageView7"
        app:layout_constraintTop_toBottomOf="@+id/valorlimon"
        app:layout_constraintVertical_bias="0.837" />

    <Button
        android:id="@+id/domicilio"
        android:layout_width="308dp"
        android:layout_height="59dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/boton_redondo"
        android:text="Solicitar mercado"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="ir_domicilio"/>

</androidx.constraintlayout.widget.ConstraintLayout>